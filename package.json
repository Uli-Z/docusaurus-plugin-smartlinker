{
  "name": "linkify-med-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18 <21"
  },
  "scripts": {
    "build": "pnpm -r --filter './packages/**' run build",
    "test": "pnpm -r --filter './packages/**' run test --",
    "lint": "echo \"@(optional) add eslint later\"",
    "site:dev": "pnpm --filter @examples/site dev",
    "site:build": "pnpm --filter @examples/site build",
    "site:serve": "pnpm --filter @examples/site serve",
    "reset": "rm -rf node_modules packages/*/node_modules examples/site/node_modules && pnpm install --prefer-offline && pnpm -r --filter './packages/**' run build && pnpm site:build"
  },
  "devDependencies": {
    "@docusaurus/types": "^3.8.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "estree-walker": "^3.0.3",
      "estree-util-build-jsx": "^3.0.1",
      "recma-build-jsx": "^1.0.0",
      "@mdx-js/mdx": "^3.1.1"
    }
  }
}
