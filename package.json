{
  "name": "docusaurus-plugin-smartlinker",
  "private": true,
  "version": "0.2.1",
  "description": "Docusaurus plugin + remark helper for SmartLink tooltips.",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/site"
  ],
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18 <25"
  },
  "scripts": {
    "build": "pnpm --filter docusaurus-plugin-smartlinker run build",
    "test": "pnpm run build && pnpm --filter docusaurus-plugin-smartlinker run test",
    "typecheck": "pnpm --filter docusaurus-plugin-smartlinker run typecheck",
    "lint": "echo \"@(optional) add eslint later\"",
    "ci": "pnpm test && pnpm run pack:ci",
    "site:dev": "pnpm --filter @examples/site run dev",
    "site:build": "pnpm --filter @examples/site run build",
    "site:serve": "pnpm --filter @examples/site run serve",
    "pack:ci": "rm -rf build-artifacts && pnpm --filter docusaurus-plugin-smartlinker pack --pack-destination build-artifacts",
    "reset": "rm -rf node_modules packages/*/node_modules examples/site/node_modules && pnpm install && pnpm run build && pnpm --filter @examples/site run build",
    "prepublishOnly": "pnpm --filter docusaurus-plugin-smartlinker run build",
    "smoke:git-install": "node ./scripts/git-install-smoke.mjs"
  },
  "peerDependencies": {
    "@docusaurus/core": "^3.0.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "unified": "^11.0.0"
  },
  "dependencies": {
    "@docusaurus/mdx-loader": "^3.0.0",
    "@mdx-js/mdx": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@radix-ui/react-tooltip": "^1.2.8",
    "gray-matter": "^4.0.3",
    "react-markdown": "^9.0.3",
    "unist-util-visit": "^5.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@docusaurus/types": "^3.8.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "overrides": {
      "react": ">=18.2.0 <20",
      "react-dom": ">=18.2.0 <20",
      "estree-walker": "^3.0.3",
      "estree-util-build-jsx": "^3.0.1",
      "recma-build-jsx": "^1.0.0",
      "@mdx-js/mdx": "^3.1.1"
    }
  },
  "license": "MIT",
  "author": "Uli Z",
  "repository": {
    "type": "git",
    "url": "https://github.com/Uli-Z/docusaurus-plugin-smartlinker.git"
  },
  "bugs": {
    "url": "https://github.com/Uli-Z/docusaurus-plugin-smartlinker/issues"
  },
  "homepage": "https://uli-z.github.io/docusaurus-plugin-smartlinker/"
}
